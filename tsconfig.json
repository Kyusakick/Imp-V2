{
  "compilerOptions": {

    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "noResolve": false,

    "allowJs": true,
    "checkJs": false,

    "sourceMap": true,
    "removeComments": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    "skipLibCheck": true
  },

  "exclude": ["node_modules"]
}
